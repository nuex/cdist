#
# Deploy configuration to many hosts
#

. cdist-config
[ $# -ge 1 ] || __cdist_usage "[-p] <target host> [target host ]"
set -u

# Kill children on interrupt - only in interactive scripts
trap __cdist_kill_on_interrupt INT TERM

filter()
{
   awk -v host=$1 '{ print "[" host "] " $0 }'
}

errors=0
success=0
error_hosts=""
success_hosts=""

parallel=""
if [ "$1" = "-p" ]; then
   parallel=yes
   shift
fi

i=0
while [ $# -gt 0 ]; do
   if [ "$parallel" ]; then
      cdist-deploy-to "$1" 2>&1 | filter "$1" &
      # Record pid and host for use later
      i=$((i+1))
      eval pid_$i=$!
      eval host_$i=\$1
   else
      cdist-deploy-to "$1" 2>&1 | filter "$1"; ret=$?
      if [ $ret -eq 0 ]; then
         success=$((success+1))
         success_hosts="$host $success_hosts"
      else
         errors=$((errors+1))
         error_hosts="$host $error_hosts"
      fi
   fi
   shift
done

if [ "$parallel" ]; then
   __cdist_echo info "Waiting for cdist-deploy-to jobs to finish"
   while [ "$i" -gt 0 ]; do
      eval pid=\$pid_$i
      eval host=\$host_$i
      wait "$pid"; ret=$?
      echo "$pid: Host $host ret = $ret"
      if [ $ret -eq 0 ]; then
         success=$((success+1))
         success_hosts="$host $success_hosts"
      else
         errors=$((errors+1))
         error_hosts="$host $error_hosts"
      fi
      i=$((i-1))
   done
fi

# Display a summary at the end to get an overview
__cdist_echo info "Failed hosts  ($errors): $error_hosts"
__cdist_echo info "Success hosts ($success): $success_hosts"
